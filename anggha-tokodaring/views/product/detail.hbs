<h2>{{products.name}}</h2>
<div class="row product-detail">
	<div class="col-md-6">
		<img src="http://placehold.it/400x300" alt="{{products.name}}" class="img-rounded product-img"/>
	</div>
	<div class="col-md-6">
		<span>sku : {{products.sku}}</span>
		<p>{{products.description}}</p>
		<span>Price : {{currency products.price}}</span>
	</div>
</div>

